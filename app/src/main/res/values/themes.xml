<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NotesKeeper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NotesKeeper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NotesKeeper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CourseTitle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/orange_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AddFab" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="srcCompat">@drawable/ic_baseline_add_24</item>
        <item name="android:tint">@android:color/white</item>
    </style>
</resources>